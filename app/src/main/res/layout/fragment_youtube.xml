<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#303030"
    app:layoutDescription="@xml/fragment_youtube_scene"
    tools:context=".ui.youtubeplayer.YoutubeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/playerBackground"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@id/movie_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/movie"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="@id/playerBackground"
            app:layout_constraintBottom_toBottomOf="@id/playerBackground"
            app:layout_constraintStart_toStartOf="@id/playerBackground"
            app:layout_constraintDimensionRatio="H,1:2"
            app:srcCompat="@drawable/sample_image" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/movie_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/long_text"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.motion.widget.MotionLayout>
